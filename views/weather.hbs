<!DOCTYPE html>
<html lang="en">
<head>
    <title>Weather</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="/styleMain.css">
    <link rel="stylesheet" href="/weatherstyle.css">
</head>
<body>
    <div id="top">
        
        <div id="beforeWeather">
            <h2>Weather app</h2>
        </div>
        <div id="weatherDiv">
            <div id="search">
                <form action="/auth/weather" method="POST">
                    <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="search a city" aria-label="city" aria-describedby="basic-addon2" name="city">
                    <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Button</button>
                    </div>
                    </div>
                </form>
            </div>
            <div id="weatherLogo">
                <div id="WeatherLogodiv">
                    <img src="/WeatherLogo.png" alt="Logo" id="weatherLogoImg">
                </div>
            </div>
            <div id="details">
                <div id="weatherDetails">
                    <div id="LeftDetails">
                    <h1 id="tempC">{{tempC}}<span>&#8451;</span></h1>
                    </div>
                    <div id="RightDetails">
                    <h4 id="tempM">{{tempM}}</h4>
                    <h6 id="cityA">{{cityA}}</h6>
                    </div>
                </div>
                <div id="date">
                    <h3 id="day" class="date">21</h3>
                    <h3 id="month" class="date">Dec</h3>
                </div>
            </div>
        </div>
    </div>
    <script src="/weather.js"></script>
</body>
</html>